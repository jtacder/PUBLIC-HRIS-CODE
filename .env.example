# ElectroManage ERP Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration (Required)
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/electromanage

# Session Configuration (Required)
# Secret for session encryption - must be at least 32 characters
# Generate with: openssl rand -hex 32
SESSION_SECRET=your-secret-key-at-least-32-characters-long

# Application Configuration (Optional)
# Environment: development, production, or test
NODE_ENV=development

# Server port (default: 5000)
PORT=5000

# Sentry Error Tracking (Optional)
# Get your DSN from https://sentry.io
# Leave empty to disable Sentry
SENTRY_DSN=
# Frontend Sentry DSN (can be the same as backend or different project)
VITE_SENTRY_DSN=
# Release version for tracking deployments (optional)
SENTRY_RELEASE=

# Google Maps API (Optional)
# Get your API key from https://console.cloud.google.com/apis/credentials
# Enable: Maps JavaScript API, Places API
VITE_GOOGLE_MAPS_API_KEY=

# Email Configuration (Optional - for password reset and notifications)
# Set EMAIL_ENABLED=true to enable email features
EMAIL_ENABLED=false

# Resend API Key - Get your API key from https://resend.com
# Required if EMAIL_ENABLED=true
RESEND_API_KEY=

# Email sender configuration
# The domain must be verified in Resend before sending
EMAIL_FROM_ADDRESS=noreply@jerejtech.org
EMAIL_FROM_NAME=JE & REJ Tech

# Application URL (used for password reset links)
# In production, set this to your actual domain (e.g., https://app.jerejtech.org)
APP_URL=http://localhost:5000

# Web Push Notifications (Optional - push notifications disabled if not set)
# Generate VAPID keys with: npx web-push generate-vapid-keys
# These keys are required for browser push notifications to work
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
# Must be a mailto: or https:// URL identifying the application server
VAPID_SUBJECT=mailto:admin@jerejtech.org

# Note: When running on Replit, the following variables are automatically set:
# - REPL_ID
# - REPLIT_DOMAINS
# - REPLIT_DEV_DOMAIN
# - PGHOST, PGPORT, PGUSER, PGPASSWORD, PGDATABASE
